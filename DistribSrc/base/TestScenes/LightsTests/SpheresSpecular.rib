			Surface "plastic" "roughness" .5 "specularcolor" [1 0 0]
		
			Translate  .025 0 0
			Sphere .01 -.01 .01 360

		TransformEnd

	Translate 0 -.025 0

		TransformBegin
	
			Surface "plastic" "roughness" .6 "specularcolor" [1 0 0]
		
			Translate -.025 0 0
			Sphere .01 -.01 .01 360

			Surface "plastic" "roughness" .7 "specularcolor" [1 0 0]
		
